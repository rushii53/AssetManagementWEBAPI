@page "/machine/{machineName}"
@if(Model!=null){
<div class="container m-4 p-2">
    <div class="shadow-lg p-3">
        <div class="row d-flex">
            <div class="col fw-bolder">Machine: @Model.MachineName</div>
            <div class="col">Machine Id: @Model.MachineName</div>
            <div class="col">Total Assets: @Model.Asset.Count</div>
        </div>
    </div>
    <div class="row p-3">
        <ul class="list-group shadow-lg">
            <li class="list-group-item bg-gradient fw-bold bg-primary text-white">
                <div class="row">
                    <div class="col">No.</div>
                    <div class="col">Asset Name</div>
                    <div class="col">Asset Version</div>
                </div>
            </li>
            @foreach (var (asset, index) in Model.Asset.Select((value, i) => (value, i + 1)))
            {
                <li class="list-group-item">
                    <div class="row d-flex align-items-center">
                        <div class="col">@index</div>
                        <div class="col">@asset.AssetName</div>
                        <div class="col">@asset.AssetVersion</div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
}
